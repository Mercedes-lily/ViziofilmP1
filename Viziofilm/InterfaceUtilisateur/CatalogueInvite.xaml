<Window x:Class="Viziofilm.CatalogueInvite"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Viziofilm"
        mc:Ignorable="d"
        Title="VizioFilm"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ProprieteFenetre}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label 
                        x:Name="CatalogueFilms" 
                        Content="Catalogue des Films" 
                        Grid.Column="0"
                        Grid.Row="0"
                        Style="{StaticResource LabelTitre}"/>
                <Label 
                        x:Name="Titre" 
                        Content="VizioFilm" 
                        Grid.Column="0"
                        Grid.Row="0"
                        Style="{StaticResource LabelNormauxGauche}"
                        VerticalAlignment="Top"/>
                <Button 
                    x:Name="BtnInscription" 
                    Content="S'inscrire" 
                    Grid.Column="2"
                    Grid.Row="0"
                        Style="{StaticResource PetitBoutonJaune}" Click="BtnInscription_Click"
                    />
                <Label
                        x:Name="RechercheCatalogue" 
                        Content="Recherche : " 
                        Grid.Column="0"
                        Grid.Row="1"
                        Style="{StaticResource LabelNormauxDroite}"/>
                <TextBox
                        x:Name="InputRechercheCatalogue" 
                        Grid.Column="1"
                        Grid.Row="1"
                        Style="{StaticResource TextBox}"/>
                <Button
                        x:Name="BtnRechercheCatalogue" 
                        Content="Rechercher" 
                        Grid.Column="2"
                        Grid.Row="1"
                        Style="{StaticResource BoutonJaune}" Click="BtnRechercheCatalogue_Click"/>
                <Button
                        x:Name="BtnRechercheAvanceeCatalogue" 
                        Content="Recherche Avancée" 
                        Grid.Column="1"
                        Grid.Row="2"
                        Style="{StaticResource BoutonJaune}" Click="BtnRechercheAvanceeCatalogue_Click"/>
                <ItemsControl 
                        ItemsSource="{Binding ListeFilms}"
                        Grid.Column="0"
                        Grid.Row="3"
                        Grid.ColumnSpan="3">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <Image Source="{Binding Affiche}"
                                        Width="150"
                                        Height="200"
                                        Stretch="UniformToFill"
                                    />
                                <TextBlock Text="{Binding Titre}"
                                        HorizontalAlignment="Center"
                                        TextAlignment="Center"
                                        FontWeight="Bold"
                                        TextWrapping="Wrap"
                                    />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
        <Button 
                x:Name="BtnRetour" 
                Content="Retour"
                Grid.Row="1"
                Style="{StaticResource BoutonBleu}"
                HorizontalAlignment="Right"
                Width="150" Click="BtnRetour_Click"
            />
    </Grid>
</Window>
