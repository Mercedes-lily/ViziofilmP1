<Window x:Class="Viziofilm.CatalogueAdministrateur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Viziofilm"
        mc:Ignorable="d"
        Title="VizioFilmAdministrateur"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ProprieteFenetre}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>


        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <Button
                x:Name="BtnGererCatalogue" 
                Content="Gestion du catalogue" 
                Style="{StaticResource HeaderSelectionnee}"
             />

        <Button
                x:Name="BtnStatistiques" 
                Content="Voir les statistiques" 
                Grid.Column="2"
                Style="{StaticResource HeaderNeutre}"
                Command="{Binding BoutonStatistiqueCommande}"
/>
        <Button
                x:Name="BtnGererAbonnement" 
                Content="Gestion des abonnements" 
                Grid.Column="1"
                Style="{StaticResource HeaderNeutre}" 
                Command="{Binding BoutonGererAbonnementCommande}"
             />
        <Button
                x:Name="BtnDeconexion" 
                Content="🚪" 
                Grid.Column="3"
                Style="{StaticResource HeaderSelectionnee}"
                Foreground="#D16F00"
                Background="#FFD100"
                Command="{Binding BoutonDeconnexionCommande}"
            />
        <TabControl Grid.ColumnSpan="4" Grid.Row="1">
            <TabItem Header="Gestion des films" Style="{StaticResource Onglet}">
                <Grid Background="#C6E9F7">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <ListView ItemsSource="{Binding TousLesFilms}" Background="#C6E9F7">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Titre" Width="380">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock 
                                            Text="{Binding Titre, UpdateSourceTrigger=PropertyChanged}" 
                                            Margin="5"
                                            FontSize="20"
                                            HorizontalAlignment="Stretch"
                                            />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Année" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock 
                                            Text="{Binding AnneeSortie, UpdateSourceTrigger=PropertyChanged}" 
                                            Margin="5"
                                            FontSize="20"
                                            HorizontalAlignment="Stretch"
                                            />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Disponible" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock 
                                            Text="{Binding Statut, UpdateSourceTrigger=PropertyChanged}" 
                                            Margin="5"
                                            FontSize="20"
                                            HorizontalAlignment="Stretch"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="80" Header="Modifier">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button 
                                                Content="✏️" 
                                                Margin="5"
                                                FontSize="20"
                                                Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListView}}, Path=DataContext.BoutonModifierFilmCommande}" CommandParameter="{Binding}"
                                                />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="80" Header="Supprimer">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button 
                                                 Content="🗑️" 
                                                 Margin="5"
                                                 FontSize="20"
                                                 Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListView}}, Path=DataContext.BoutonSupprimerFilmCommande}" CommandParameter="{Binding}"
                                            />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button 
                        Grid.Row="1"
                        Content="Ajouter"
                        Style="{StaticResource BoutonJaune}"
                        Grid.ColumnSpan="3"
                        Margin="5,5,5,5"
                        Command="{Binding BoutonAjouterFilmCommande}"
                        />
                </Grid>
            </TabItem>
            <TabItem Header="Gestion des categories" Style="{StaticResource Onglet}" Grid.ColumnSpan="4" Grid.Row="1" >
                <Grid Background="#C6E9F7">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <ListView ItemsSource="{Binding Abonnement}" Background="#C6E9F7">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Nom" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock 
                                        Text="{Binding Nom}" 
                                        Margin="5"
                                        FontSize="20"
                                        HorizontalAlignment="Stretch"
                                        />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Nombre de film" Width="300">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock 
                                        Text="{Binding NombreDeFilm}" 
                                        Margin="5"
                                        FontSize="20"
                                        HorizontalAlignment="Stretch"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Supprimer" Width="300">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock 
                                                Text="{Binding Supprimer}" 
                                                Margin="5"
                                                FontSize="20"
                                                HorizontalAlignment="Stretch"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button 
                        x:Name="BtnAjouterCategorie"
                        Grid.Row="1"
                        Content="Ajouter"
                        Style="{StaticResource BoutonJaune}" Grid.ColumnSpan="3" Margin="5,5,5,5"
                        />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
