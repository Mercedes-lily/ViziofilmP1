<Window x:Class="Viziofilm.ModificationFilmAdministrateur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Viziofilm"
        mc:Ignorable="d"
        Title="VizioFilmAdministrateur"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ProprieteFenetre}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Background="#C6E9F7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="0.8*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label 
                           x:Name="TitreModificationFilm" 
                           Content="Détails du film" 
                           Grid.Row="0" 
                           Grid.Column="0" 
                           Style="{StaticResource LabelTitre}"/>
            <Label 
                           x:Name="Actuel"
                           Content="Actuel" 
                           Grid.Row="2" 
                           Grid.Column="2"
                           Style="{StaticResource LabelNormauxDroite}"
                           HorizontalAlignment="Center"
            />
            <Label 
                           x:Name="ModificationFilm"
                           Content="Modification" 
                           Grid.Row="2" 
                           Grid.Column="3"
                           Style="{StaticResource LabelNormauxDroite}"
                           HorizontalAlignment="Center"
            />
            <Label 
                x:Name="TitreFilm"
                Content="Titre :" 
                Grid.Row="3" 
                Grid.Column="1"
               Style="{StaticResource LabelNormauxDroite}"
            />
            <ScrollViewer
                Grid.Row="3"
                Grid.Column="2"
                VerticalScrollBarVisibility="Disabled"
                HorizontalScrollBarVisibility="Visible">
                <TextBlock 
                    x:Name="TitreOutput"
                    Text="{Binding Titre, Mode=OneWay}"
                    TextWrapping="Wrap"
                    Margin="5"
                    FontFamily="Footlight MT Light"
                    FontSize="20"
                    Foreground="#219EBC"/>
            </ScrollViewer>
            <TextBox 
                    x:Name="InputTitre"
                    Grid.Row="3"
                    Grid.Column="3"
                    Style="{StaticResource TextBox}"
                    Text="{Binding Titre}"
                    />
            <Label 
                x:Name="Duree"
                Content="Duree : " 
                Grid.Row="4" 
                Grid.Column="1"
                 Style="{StaticResource LabelNormauxDroite}"
            />
            <Label 
                x:Name="DureeFilmOutput"
                Content="{Binding Duree}" 
                Grid.Row="4" 
                Grid.Column="2"
                Style="{StaticResource LabelNormauxGauche}"
                HorizontalAlignment="Center"
            />
            <TextBox 
                    x:Name="InputDureeFilm"
                    Grid.Row="4"
                    Grid.Column="3"
                    Style="{StaticResource TextBox}"
                    Text="{Binding Duree}"
                />

            <Label 
                x:Name="AnneeFilmAbonnement"
                Content="Année : " 
                Grid.Row="5" 
                Grid.Column="1"
                Style="{StaticResource LabelNormauxDroite}"
            />
            <Label 
                x:Name="AnneeFilmOutput"
                Content="{Binding AnneeSortie}" 
                Grid.Row="5" 
                Grid.Column="2"
                Style="{StaticResource LabelNormauxGauche}"
                HorizontalAlignment="Center"
                />
                <TextBox
                    x:Name="AnneeFilmInput" 
                    Grid.Row="5" 
                    Grid.Column="3" 
                    Style="{StaticResource Liste}"
                    Text="{Binding AnneeSortie}"
                />
            <Label 
    x:Name="PrixFilmAbonnement"
    Content="Prix : " 
    Grid.Row="6" 
    Grid.Column="1"
    Style="{StaticResource LabelNormauxDroite}"
/>
            <Label 
    x:Name="PrixFilmOutput"
    Content="{Binding Prix}" 
    Grid.Row="6" 
    Grid.Column="2"
    Style="{StaticResource LabelNormauxGauche}"
    HorizontalAlignment="Center"
    />
            <TextBox
        x:Name="PrixFilmInput" 
        Grid.Row="6" 
        Grid.Column="3" 
        Style="{StaticResource Liste}"
                Text="{Binding Prix}"
           />


            <Label 
                x:Name="SynopsisFilmAbonnement"
                Content="Synopsis : " 
                Grid.Row="7" 
                Grid.Column="1"
                VerticalAlignment="Top"
                Style="{StaticResource LabelNormauxDroite}"
            />
            <TextBox
                x:Name="SynopsisInput"
                Height="100"
                MaxHeight="150"
                TextWrapping="Wrap"
                Grid.Row="7"
                Grid.Column="3"
                VerticalScrollBarVisibility="Auto"
                Style="{StaticResource TextBox}"
                Text="{Binding Synopsis}"
                />
            <ScrollViewer
                Grid.Row="7"
                Grid.Column="2"
                Height="100"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled">
                <TextBlock 
                    x:Name="SynopsisFilmOutput"
                    Text="{Binding Synopsis}"
                    TextWrapping="Wrap"
                    Margin="5"
                    FontFamily="Footlight MT Light"
                    FontSize="20"
                    Foreground="#219EBC"/>
                </ScrollViewer>
                <Label 
                x:Name="StatusFilmAbonnement"
                Content="Statut : " 
                Grid.Row="14" 
                Grid.Column="1"
                Style="{StaticResource LabelNormauxDroite}"
            />
            <Label 
    x:Name="StatusFilmOutput"
    Content="{Binding StatutSelectionne}" 
    Grid.Row="14" 
    Grid.Column="2"
    Style="{StaticResource LabelNormauxGauche}"
    HorizontalAlignment="Center"
    
    />
            <ComboBox
                x:Name="StatusFilmInput" 
                Grid.Row="14" 
                Grid.Column="3" 
                Style="{StaticResource Liste}"
                ItemsSource="{Binding TousLesStatuts}"
                SelectedItem="{Binding StatutSelectionne, Mode=TwoWay}"
                />
            <Label 
    x:Name="MotCleFilmAbonnement"
    Content="Mot-Clé : " 
    Grid.Row="8" 
    Grid.Column="1"
    Style="{StaticResource LabelNormauxDroite}"
/>
            <ScrollViewer
    Grid.Row="8"
    Grid.Column="2"
    VerticalScrollBarVisibility="Disabled"
    HorizontalScrollBarVisibility="Visible">
                <TextBlock 
        x:Name="MotCleFilmOutput"
        Text="{Binding MotsCles}"
        TextWrapping="Wrap"
        Margin="5"
        FontFamily="Footlight MT Light"
        FontSize="20"
        Foreground="#219EBC"/>
            </ScrollViewer>
            <TextBox 
        x:Name="InputMotCle"
        Grid.Row="8"
        Grid.Column="3"
        Style="{StaticResource TextBox}"
                Text="{Binding MotsCles}"
        />
            <Label 
    x:Name="DistributionFilmAbonnement"
    Content="Distribution : " 
    Grid.Row="9" 
    Grid.Column="1"
    Style="{StaticResource LabelNormauxDroite}"
/>
            <ScrollViewer
                Grid.Row="9"
                Grid.Column="2"
                Height="100"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled">
                <TextBlock 
                    x:Name="DistributionFilmOutput"
                    Text=""
                    TextWrapping="Wrap"
                    Margin="5"
                    FontFamily="Footlight MT Light"
                    FontSize="20"
                    Foreground="#219EBC"/>
            </ScrollViewer>
            <TextBox
                x:Name="DistributionInput"
                Height="100"
                MaxHeight="150"
                TextWrapping="Wrap"
                Grid.Row="9"
                Grid.Column="3"
                VerticalScrollBarVisibility="Auto"
                Style="{StaticResource TextBox}"
                />
            <Label 
    x:Name="BandeAnnonceFilm"
    Content="Bande-Annonce : " 
    Grid.Row="12" 
    Grid.Column="1"
    Style="{StaticResource LabelNormauxDroite}"
/>
            <ScrollViewer
                Grid.Row="12"
                Grid.Column="2"
                VerticalScrollBarVisibility="Disabled"
                HorizontalScrollBarVisibility="Auto">
                <TextBlock 
                    x:Name="BandeAnnonceFilmOutput"
                    Text=""
                    TextWrapping="Wrap"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontFamily="Footlight MT Light"
                    FontSize="20"
                    Foreground="#219EBC"/>
            </ScrollViewer>
            <TextBox 
                x:Name="InputBandeAnnonceFilm"
                Grid.Row="12"
                Grid.Column="3"
                Style="{StaticResource TextBox}"
                />
            <Label 
    x:Name="CategorieFilm"
    Content="Catégorie : " 
    Grid.Row="10" 
    Grid.Column="1"
    Style="{StaticResource LabelNormauxDroite}"
/>
            <ScrollViewer
    Grid.Row="10"
    Grid.Column="2"
    VerticalScrollBarVisibility="Auto"
    HorizontalScrollBarVisibility="Disabled">
                <TextBlock 
        x:Name="CategorieFilmOutput"
        Text="{Binding CategorieSelectionnee.Nom}"
        TextWrapping="Wrap"
        Margin="5"
        HorizontalAlignment="Center"
        FontFamily="Footlight MT Light"
        FontSize="20"
        Foreground="#219EBC"/>
            </ScrollViewer>
            <ComboBox 
            x:Name="InputCategorie"
            Grid.Row="10"
            Grid.Column="3"
                ItemsSource="{Binding ToutesLesCategories}"
                SelectedItem="{Binding CategorieSelectionnee, Mode=TwoWay}"
                DisplayMemberPath="nom"
            Style="{StaticResource TextBox}"
            >
            </ComboBox>
            <Label 
    x:Name="LangueFilm"
    Content="Langue : " 
    Grid.Row="11" 
    Grid.Column="1"
    Style="{StaticResource LabelNormauxDroite}"
/>
            <Label 
    x:Name="LangueFilmOutput"
    Content="{Binding LanguePisteSelectionnee.code}" 
    Grid.Row="11" 
    Grid.Column="2"
    Style="{StaticResource LabelNormauxGauche}"
    HorizontalAlignment="Center"
    
    />
            <ComboBox 
        x:Name="InputLangue"
        Grid.Row="11"
        Grid.Column="3"
                ItemsSource="{Binding ToutesLesLangues}"
                SelectedItem="{Binding LanguePisteSelectionnee, Mode=TwoWay}"
                DisplayMemberPath="code"
        Style="{StaticResource TextBox}"
        >
                
            </ComboBox>
            <Label 
    x:Name="AfficheFilm"
    Content="Affiche : " 
    Grid.Row="13" 
    Grid.Column="1"
    Style="{StaticResource LabelNormauxDroite}"
/>
            <ScrollViewer
                Grid.Row="13"
                Grid.Column="2"
                VerticalScrollBarVisibility="Disabled"
                HorizontalScrollBarVisibility="Auto">
                <TextBlock 
                    x:Name="AfficheFilmOutput"
                    Text=""
                    TextWrapping="Wrap"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontFamily="Footlight MT Light"
                    FontSize="20"
                    Foreground="#219EBC"/>
            </ScrollViewer>
            <TextBox 
    x:Name="AfficheFilmInput"
    Grid.Row="13"
    Grid.Column="3"
    Style="{StaticResource TextBox}"
    />
            <Label
         x:Name="Alerte"
         Content="{Binding MessageErreur}"
         Grid.Row="3"
         Grid.Column="4"
         Style="{StaticResource LabelAlerte}"/>

            <Button 
                 x:Name="BtnAnnulerFilm" 
                 Content="Annuler" 
                 Grid.Row="15" 
                 Grid.Column="4" 
                 Style="{StaticResource BoutonBleu}" 
                 Command="{Binding BoutonAnnulerFilmCommande}"/>


            <Button 
                x:Name="BtnEnregristrerFilm" 
                Content="Enregistrer" 
                Grid.Row="15" 
                Grid.Column="3" 
                Style="{StaticResource BoutonJaune}" 
                Command="{Binding BoutonEnregistrerFilmCommande}"/>
        </Grid>
    </ScrollViewer>
</Window>
