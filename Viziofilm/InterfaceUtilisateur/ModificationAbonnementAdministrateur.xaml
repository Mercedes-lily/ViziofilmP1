<Window x:Class="Viziofilm.ModificationAbonnementAdministrateur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Viziofilm"
        mc:Ignorable="d"
        Title="VizioFilmAdministrateur"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ProprieteFenetre}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Background="#C6E9F7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label 
                           x:Name="TitreProfil" 
                           Content="Détails de l'abonnement" 
                           Grid.Row="0" 
                           Grid.Column="0" 
                           Style="{StaticResource LabelTitre}"/>
            <Label 
                           x:Name="Actuel"
                           Content="Actuel" 
                           Grid.Row="2" 
                           Grid.Column="2"
                           Style="{StaticResource LabelNormauxDroite}"
                           HorizontalAlignment="Center"
            />
            <Label 
                           x:Name="ModificationProfil"
                           Content="Modification" 
                           Grid.Row="2" 
                           Grid.Column="3"
                           Style="{StaticResource LabelNormauxDroite}"
                           HorizontalAlignment="Center"
            />
            <Label 
                x:Name="NomAbonnement"
                Content="Nom :" 
                Grid.Row="3" 
                Grid.Column="1"
               Style="{StaticResource LabelNormauxDroite}"
            />
            <Label 
                            x:Name="NomAbonnementOutput"
                            Content="Premium" 
                            Grid.Row="3" 
                            Grid.Column="2"
                           Style="{StaticResource LabelNormauxGauche}"
                           HorizontalAlignment="Center"
            />
            <TextBox 
                    x:Name="InputNomProfil"
                    Grid.Row="3"
                    Grid.Column="3"
                    Style="{StaticResource TextBox}"
                    />
            <Label 
                x:Name="PrixAbonnement"
                Content="Prix : " 
                Grid.Row="4" 
                Grid.Column="1"
                 Style="{StaticResource LabelNormauxDroite}"
            />
            <Label 
                x:Name="PrenomProfilOutput"
                Content="5,99" 
                Grid.Row="4" 
                Grid.Column="2"
                 Style="{StaticResource LabelNormauxGauche}"
HorizontalAlignment="Center"
            />
            <TextBox 
                    x:Name="InputPrixProfil"
                    Grid.Row="4"
                    Grid.Column="3"
                    Style="{StaticResource TextBox}"
                    />

            <Label 
                x:Name="NombreAppareilAbonnement"
                Content="Nonbre d'appareil : " 
                Grid.Row="5" 
                Grid.Column="1"
                Style="{StaticResource LabelNormauxDroite}"
            />
            <Label 
                x:Name="NombreAppareilAbonnementOutput"
                Content="3" 
                Grid.Row="5" 
                Grid.Column="2"
                Style="{StaticResource LabelNormauxGauche}"
                HorizontalAlignment="Center"
                
                />
            <ComboBox
                    x:Name="NombreAppareilAbonnementInput" 
                    Grid.Row="5" 
                    Grid.Column="3" 
                    Style="{StaticResource Liste}"
                       >
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
            </ComboBox>
            <Label
         x:Name="Alerte"
         Content="**Message d'alerte**"
         Grid.Row="3"
         Grid.Column="4"
         Style="{StaticResource LabelAlerte}"/>

            <Button 
     x:Name="BtnAnnulerAbonnement" 
     Content="Annuler" 
     Grid.Row="7" 
     Grid.Column="4" 
     Style="{StaticResource BoutonBleu}" Click="BtnAnnulerAbonnement_Click"/>


            <Button 
                x:Name="BtnEnregristrerAbonnement" 
                Content="Enregistrer" 
                Grid.Row="7" 
                Grid.Column="3" 
                Style="{StaticResource BoutonJaune}" Click="BtnEnregristrerAbonnement_Click"/>
        </Grid>
    </ScrollViewer>
</Window>
