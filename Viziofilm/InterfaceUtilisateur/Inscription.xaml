<Window x:Class="Viziofilm.Inscription"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Viziofilm"
        mc:Ignorable="d"
        Title="VizioFilm"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ProprieteFenetre}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <Label 
            x:Name="Titre" 
            Content="Inscription" 
            Grid.Row="0" 
            Grid.Column="0" 
            Style="{StaticResource LabelTitre}"
        />

            <Button 
            x:Name="BtnInscription" 
            Content="Soumettre" 
            Grid.Row="10" 
            Grid.Column="1" 
            Style="{StaticResource BoutonJaune}"
            Command="{Binding BoutonSoumettreCommande}"
            
        />

            <Button 
            x:Name="BtnRetour" 
            Content="Retour" 
            Grid.Row="11" 
            Grid.Column="2" 
            Style="{StaticResource BoutonBleu}"
            Command="{Binding BoutonRetourCommande}"
        />

            <Label 
            x:Name="Identifiant" 
            Content="Identifiant :" 
            Grid.Row="1" 
            Grid.Column="0" 
            Style="{StaticResource LabelNormauxDroite}"
        />

            <TextBox 
            x:Name="InputIdentifiant" 
            Grid.Row="1" 
            Grid.Column="1" 
            Style="{StaticResource TextBox}"
            Text ="{Binding NomUtilisateur}"
        />

            <Label 
            x:Name="MotdePasse" 
            Content="Mot de passe :" 
            Grid.Row="2" 
            Grid.Column="0" 
            Style="{StaticResource LabelNormauxDroite}"
        />

            <TextBox
            x:Name="InputMotDePasse" 
            Grid.Row="2" 
            Grid.Column="1" 
            Style="{StaticResource TextBox}"
            Text ="{Binding MotDePasse}"
    />

            <Label 
            x:Name="Nom" 
            Content="Nom :" 
            Grid.Row="3" 
            Grid.Column="0" 
            Style="{StaticResource LabelNormauxDroite}"
        />

            <TextBox 
            x:Name="InputNom" 
            Grid.Row="3" 
            Grid.Column="1" 
            Style="{StaticResource TextBox}"
                Text ="{Binding Nom}"
        />
            <Label 
            x:Name="Prenom" 
            Content="Prenom :" 
            Grid.Row="4" 
            Grid.Column="0" 
            Style="{StaticResource LabelNormauxDroite}"
        />

            <TextBox 
            x:Name="InputPrenom" 
            Grid.Row="4" 
            Grid.Column="1" 
            Style="{StaticResource TextBox}"
                Text ="{Binding Prenom}"
        />

            <Label 
            x:Name="Adresse" 
            Content="Adresse :" 
            Grid.Row="5" 
            Grid.Column="0" 
            Style="{StaticResource LabelNormauxDroite}"
        />

            <TextBox 
            x:Name="InputAdresse" 
            Grid.Row="5" 
            Grid.Column="1" 
            Style="{StaticResource TextBox}"
                Text ="{Binding Adresse}"
        />

            <Label 
            x:Name="Ville" 
            Content="Ville :" 
            Grid.Row="6" 
            Grid.Column="0" 
            Style="{StaticResource LabelNormauxDroite}"
        />

            <TextBox 
            x:Name="InputVille" 
            Grid.Row="6" 
            Grid.Column="1" 
            Style="{StaticResource TextBox}"
                Text ="{Binding Ville}"
        />

            <Label 
            x:Name="Pays" 
            Content="Pays :" 
            Grid.Row="7" 
            Grid.Column="0" 
            Style="{StaticResource LabelNormauxDroite}"
                ContentStringFormat="{Binding Pays}"
        />

            <ComboBox
            x:Name="ComboBoxPays" 
            Grid.Row="7" 
            Grid.Column="1" 
            Style="{StaticResource Liste}"
                ItemsSource="{Binding TousLesPaysDisponibles}"
            SelectedItem="{Binding Pays, Mode=TwoWay}"
            />



            <Label 
            x:Name="CodePostal" 
            Content="Code Postal :" 
            Grid.Row="8" 
            Grid.Column="0" 
            Style="{StaticResource LabelNormauxDroite}"
        />

            <TextBox 
            x:Name="InputCodePostal" 
            Grid.Row="8" 
            Grid.Column="1" 
            Style="{StaticResource TextBox}"
                Text ="{Binding CodePostal}"
        />

            <Label 
            x:Name="Email" 
            Content="AdresseCourriel :" 
            Grid.Row="9" 
            Grid.Column="0" 
            Style="{StaticResource LabelNormauxDroite}"
        />

            <TextBox 
            x:Name="InputEmail" 
            Grid.Row="9" 
            Grid.Column="1" 
            Style="{StaticResource TextBox}"
                Text ="{Binding AdresseCourriel}"
        />

            <Label 
            x:Name="Erreur" 
            Content="{Binding MessageErreur}"
            Grid.Row="1" 
            Grid.Column="2" 
            Style="{StaticResource LabelAlerte}"
        />

        </Grid>
    </ScrollViewer>
</Window>
