<Window x:Class="Viziofilm.CatalogueMembre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Viziofilm"
        mc:Ignorable="d"
        Title="VizioFilm"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ProprieteFenetre}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button
                x:Name="BtnCatalogue" 
                Content="Catalogue" 
                Style="{StaticResource HeaderSelectionnee}"
             />

        <Button
                x:Name="BtnProfil" 
                Content="Profil" 
                Grid.Column="1"
                Style="{StaticResource HeaderNeutre}" Command="{Binding BoutonProfilCommande}"
/>
        <Button
                x:Name="BtnPorteFeuille" 
                Content="PorteFeuille" 
                Grid.Column="2"
                Style="{StaticResource HeaderNeutre}" Command="{Binding BoutonPortefeuilleCommande}"
/>
            <Button
                x:Name="BtnAbonnement" 
                Content="Abonnement" 
                Grid.Column="3"
                Style="{StaticResource HeaderNeutre}" Command="{Binding GererAbonnementCommande}"
             />


        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Grid.Row="1" Grid.ColumnSpan="4">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <Label 
                x:Name="CatalogueFilms" 
                Content="Catalogue des Films" 
                Grid.Column="0"
                Grid.Row="0"
                Grid.ColumnSpan="3"
                Style="{StaticResource LabelTitre}"
                />

            <Button 
                x:Name="BtnDeconnexion" 
                Content="Déconnexion" 
                Grid.Column="2"
                Grid.Row="0"
                Style="{StaticResource PetitBoutonJaune}" Command="{Binding BoutonDeconnexionCommande}"
    />
            <Label
                x:Name="RechercheCatalogue" 
                Content="Recherche : " 
                Grid.Column="0"
                Grid.Row="1"
                Style="{StaticResource LabelNormauxDroite}"
            />
            <TextBox
                x:Name="InputRechercheCatalogue" 
                Grid.Column="1"
                Grid.Row="1"
                Style="{StaticResource TextBox}"
                Text="{Binding Recherche}"/>
            <Button
                x:Name="BtnRechercheCatalogue" 
                Content="Rechercher" 
                Grid.Column="2"
                Grid.Row="1"
                Style="{StaticResource BoutonJaune}" Command="{Binding BoutonRechercherFilmCommande}"
            />
            <Button
                x:Name="BtnRechercheAvanceeCatalogue" 
                Content="Recherche Avancée" 
                Grid.Column="1"
                Grid.Row="2"
                Style="{StaticResource BoutonJaune}" Command="{Binding BoutonRechercheAvanceeCommande}"
             />
            <ItemsControl 
                ItemsSource="{Binding FilmTrouve}"
                Grid.Column="0"
                Grid.Row="3"
                Grid.ColumnSpan="3">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                            <Button
                                Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}, Path=DataContext.BoutonInfoFilmCommande}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource ItemCatalogueButtonStyle}">
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Titre}"
                                        HorizontalAlignment="Center"
                                        TextAlignment="Center"
                                        FontWeight="Bold"
                                        TextWrapping="Wrap"
                                    />
                                    <TextBlock Text="{Binding AnneeSortie}"
                                            HorizontalAlignment="Center"
                                            TextAlignment="Center"
                                            FontWeight="Bold"
                                            TextWrapping="Wrap"
                                        />
                                    <Border Height="1" Background="#AAAAAA" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </ScrollViewer>
    </Grid>
</Window>
