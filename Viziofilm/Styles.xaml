<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    

    <Style x:Key="BoutonJaune" TargetType="Control">
        <Setter Property="Foreground" Value="#D16F00"/>
        <Setter Property="Background" Value="#FFD100"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Footlight MT Light"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="MaxWidth" Value="200"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="MaxHeight" Value="50"/>
        <Setter Property="Padding" Value="5"/>
    </Style>


    <Style x:Key="PetitBoutonJaune" TargetType="Control">
        <Setter Property="Foreground" Value="#D16F00"/>
        <Setter Property="Background" Value="#FFD100"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Footlight MT Light"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Width" Value="125"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Padding" Value="5"/>
    </Style>


    <Style x:Key="BoutonBleu" TargetType="Control">
        <Setter Property="Foreground" Value="#023047"/>
        <Setter Property="Background" Value="#219EBC"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Footlight MT Light"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="MaxWidth" Value="200"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="MaxHeight" Value="50"/>
        <Setter Property="Padding" Value="5"/>
    </Style>

    <Style x:Key="HeaderSelectionnee" TargetType="Control">
        <Setter Property="Foreground" Value="#219EBC"/>
        <Setter Property="Background" Value="#023047"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Footlight MT Light"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <Style x:Key="HeaderNeutre" TargetType="Control">
        <Setter Property="Foreground" Value="#023047"/>
        <Setter Property="Background" Value="#219EBC"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Footlight MT Light"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <Style x:Key="LabelNormauxDroite" TargetType="Control">
        <Setter Property="Foreground" Value="#023047"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Footlight MT Light"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>

    <Style x:Key="LabelNormauxGauche" TargetType="Control">
        <Setter Property="Foreground" Value="#219EBC"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Footlight MT Light"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="5"/>  
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style x:Key="LabelAlerte" TargetType="Control">
        <Setter Property="Foreground" Value="#990000"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Footlight MT Light"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style x:Key="LabelTitre" TargetType="Control">
        <Setter Property="Foreground" Value="#023047"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontFamily" Value="Footlight MT Light"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Grid.ColumnSpan" Value="6"/>
    </Style>

    <Style x:Key="TextBox" TargetType="Control">
        <Setter Property="Foreground" Value="#023047"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="FontFamily" Value="Footlight MT Light"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="MaxWidth" Value="1600"/>
        <Setter Property="MaxHeight" Value="50"/>
    </Style>

    <Style x:Key="ComboBox" TargetType="Control">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="MaxWidth" Value="1600"/>
        <Setter Property="MaxHeight" Value="50"/>
    </Style>

    <Style x:Key="Liste" TargetType="Control">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="FontFamily" Value="Footlight MT Light"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="MaxWidth" Value="1600"/>
        <Setter Property="MaxHeight" Value="50"/>
    </Style>

    <Style x:Key="ProprieteFenetre" TargetType="Control">
        <Setter Property="Background" Value="#C6E9F7"/>
        <Setter Property="Width" Value="800"/>
        <Setter Property="Height" Value="500"/>
    </Style>

    <Style x:Key="Onglet" TargetType="TabItem">
        <Setter Property="Background" Value="#023047"/>
        <Setter Property="Foreground" Value="#C6E9F7"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Width" Value="250"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Foreground" Value="#219EBC"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>