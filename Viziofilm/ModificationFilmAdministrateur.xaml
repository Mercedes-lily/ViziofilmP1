<Window x:Class="Viziofilm.ModificationFilmAdministrateur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Viziofilm"
        Height="1000"
        mc:Ignorable="d"
                Title="VizioFilmAdministrateur"
        Style="{StaticResource ProprieteFenetre}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Background="#C6E9F7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="0.8*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label 
                           x:Name="TitreModificationFilm" 
                           Content="Détails du film" 
                           Grid.Row="0" 
                           Grid.Column="0" 
                           Style="{StaticResource LabelTitre}"/>
            <Label 
                           x:Name="Actuel"
                           Content="Actuel" 
                           Grid.Row="2" 
                           Grid.Column="2"
                           Style="{StaticResource LabelNormauxDroite}"
                           HorizontalAlignment="Center"
            />
            <Label 
                           x:Name="ModificationFilm"
                           Content="Modification" 
                           Grid.Row="2" 
                           Grid.Column="3"
                           Style="{StaticResource LabelNormauxDroite}"
                           HorizontalAlignment="Center"
            />
            <Label 
                x:Name="TitreFilm"
                Content="Titre :" 
                Grid.Row="3" 
                Grid.Column="1"
               Style="{StaticResource LabelNormauxDroite}"
            />
            <ScrollViewer
                Grid.Row="3"
                Grid.Column="2"
                VerticalScrollBarVisibility="Disabled"
                HorizontalScrollBarVisibility="Visible">
                <TextBlock 
                    x:Name="TitreOutput"
                    Text="Le silence des Agneaux"
                    TextWrapping="Wrap"
                    Margin="5"
                    FontFamily="Footlight MT Light"
                    FontSize="20"
                    Foreground="#219EBC"/>
            </ScrollViewer>
            <TextBox 
                    x:Name="InputTitre"
                    Grid.Row="3"
                    Grid.Column="3"
                    Style="{StaticResource TextBox}"
                    />
            <Label 
                x:Name="Duree"
                Content="Duree : " 
                Grid.Row="4" 
                Grid.Column="1"
                 Style="{StaticResource LabelNormauxDroite}"
            />
            <Label 
                x:Name="DureeFilmOutput"
                Content="118 min" 
                Grid.Row="4" 
                Grid.Column="2"
                 Style="{StaticResource LabelNormauxGauche}"
HorizontalAlignment="Center"
            />
            <TextBox 
                    x:Name="InputDureeFilm"
                    Grid.Row="4"
                    Grid.Column="3"
                    Style="{StaticResource TextBox}"
                    />

            <Label 
                x:Name="AnneeFilmAbonnement"
                Content="Année : " 
                Grid.Row="5" 
                Grid.Column="1"
                Style="{StaticResource LabelNormauxDroite}"
            />
            <Label 
                x:Name="AnneeFilmOutput"
                Content="1991" 
                Grid.Row="5" 
                Grid.Column="2"
                Style="{StaticResource LabelNormauxGauche}"
                HorizontalAlignment="Center"
                />
            <ComboBox
                    x:Name="AnneeFilmInput" 
                    Grid.Row="5" 
                    Grid.Column="3" 
                    Style="{StaticResource Liste}"
                       >
                <ComboBoxItem Content="1991"/>
                <ComboBoxItem Content="1992"/>
                <ComboBoxItem Content="1993"/>
                <ComboBoxItem Content="1994"/>
                <ComboBoxItem Content="1995"/>
                <ComboBoxItem Content="1996"/>
                <ComboBoxItem Content="1997"/>
                <ComboBoxItem Content="1998"/>
                <ComboBoxItem Content="1999"/>
                <ComboBoxItem Content="2000"/>
                <ComboBoxItem Content="2001"/>
            </ComboBox>
            <Label 
    x:Name="PrixFilmAbonnement"
    Content="Prix : " 
    Grid.Row="6" 
    Grid.Column="1"
    Style="{StaticResource LabelNormauxDroite}"
/>
            <Label 
    x:Name="PrixFilmOutput"
    Content="3.99" 
    Grid.Row="6" 
    Grid.Column="2"
    Style="{StaticResource LabelNormauxGauche}"
    HorizontalAlignment="Center"
    />
            <ComboBox
        x:Name="PrixFilmInput" 
        Grid.Row="6" 
        Grid.Column="3" 
        Style="{StaticResource Liste}"
           >
                <ComboBoxItem Content="2.99"/>
                <ComboBoxItem Content="3.99"/>
                <ComboBoxItem Content="4.99"/>
            </ComboBox>
            <Label 
                x:Name="SynopsisFilmAbonnement"
                Content="Synopsis : " 
                Grid.Row="7" 
                Grid.Column="1"
                VerticalAlignment="Top"
                Style="{StaticResource LabelNormauxDroite}"
            />
            <TextBox
                x:Name="SynopsisInput"
                Height="100"
                MaxHeight="150"
                TextWrapping="Wrap"
                Grid.Row="7"
                Grid.Column="3"
                VerticalScrollBarVisibility="Auto"
                Style="{StaticResource TextBox}"
                />
            <ScrollViewer
                Grid.Row="7"
                Grid.Column="2"
                Height="100"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled">
                <TextBlock 
                    x:Name="SynopsisFilmOutput"
                    Text="Un psychopathe connu sous le nom de Buffalo Bill sème la terreur dans le Middle West en kidnappant et en assassinant de jeunes femmes. Clarice Starling, une jeune agent du FBI, est chargée d'interroger l'ex-psychiatre Hannibal Lecter. Psychopathe redoutablement intelligent et porté sur le cannibalisme, Lecter est capable de lui fournir des informations concernant Buffalo Bill ainsi que son portrait psychologique. Mais il n'accepte de l'aider qu'en échange d'informations sur la vie privée de la jeune femme. Entre eux s'établit un lien de fascination et de répulsion."
                    TextWrapping="Wrap"
                    Margin="5"
                    FontFamily="Footlight MT Light"
                    FontSize="20"
                    Foreground="#219EBC"/>
                </ScrollViewer>
                <Label 
                x:Name="StatusFilmAbonnement"
                Content="Status : " 
                Grid.Row="14" 
                Grid.Column="1"
                Style="{StaticResource LabelNormauxDroite}"
            />
            <Label 
    x:Name="StatusFilmOutput"
    Content="Disponible" 
    Grid.Row="14" 
    Grid.Column="2"
    Style="{StaticResource LabelNormauxGauche}"
    HorizontalAlignment="Center"
    
    />
            <ComboBox
x:Name="StatusFilmInput" 
Grid.Row="14" 
Grid.Column="3" 
Style="{StaticResource Liste}"
   >
                <ComboBoxItem Content="Disponible"/>
                <ComboBoxItem Content="Indisponible"/>

            </ComboBox>
            <Label 
    x:Name="MotCleFilmAbonnement"
    Content="Mot-Clé : " 
    Grid.Row="8" 
    Grid.Column="1"
    Style="{StaticResource LabelNormauxDroite}"
/>
            <ScrollViewer
    Grid.Row="8"
    Grid.Column="2"
    VerticalScrollBarVisibility="Disabled"
    HorizontalScrollBarVisibility="Visible">
                <TextBlock 
        x:Name="MotCleFilmOutput"
        Text="Tueur en série, Enquête"
        TextWrapping="Wrap"
        Margin="5"
        FontFamily="Footlight MT Light"
        FontSize="20"
        Foreground="#219EBC"/>
            </ScrollViewer>
            <TextBox 
        x:Name="InputMotCle"
        Grid.Row="8"
        Grid.Column="3"
        Style="{StaticResource TextBox}"
        />
            <Label 
    x:Name="DistributionFilmAbonnement"
    Content="Distribution : " 
    Grid.Row="9" 
    Grid.Column="1"
    Style="{StaticResource LabelNormauxDroite}"
/>
            <ScrollViewer
                Grid.Row="9"
                Grid.Column="2"
                Height="100"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled">
                <TextBlock 
                    x:Name="DistributionFilmOutput"
                    Text="Anthony Hopkins, Jodie Foster, Jack Crawford, Ted Levine, Anthony Heald"
                    TextWrapping="Wrap"
                    Margin="5"
                    FontFamily="Footlight MT Light"
                    FontSize="20"
                    Foreground="#219EBC"/>
            </ScrollViewer>
            <TextBox
                x:Name="DistributionInput"
                Height="100"
                MaxHeight="150"
                TextWrapping="Wrap"
                Grid.Row="9"
                Grid.Column="3"
                VerticalScrollBarVisibility="Auto"
                Style="{StaticResource TextBox}"
                />
            <Label 
    x:Name="BandeAnnonceFilm"
    Content="Bande-Annonce : " 
    Grid.Row="12" 
    Grid.Column="1"
    Style="{StaticResource LabelNormauxDroite}"
/>
            <ScrollViewer
                Grid.Row="12"
                Grid.Column="2"
                VerticalScrollBarVisibility="Disabled"
                HorizontalScrollBarVisibility="Auto">
                <TextBlock 
                    x:Name="BandeAnnonceFilmOutput"
                    Text="LeSilenceDesAgneauxBandeAnnonce.mp4"
                    TextWrapping="Wrap"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontFamily="Footlight MT Light"
                    FontSize="20"
                    Foreground="#219EBC"/>
            </ScrollViewer>
            <TextBox 
                x:Name="InputBandeAnnonceFilm"
                Grid.Row="12"
                Grid.Column="3"
                Style="{StaticResource TextBox}"
                />
            <Label 
    x:Name="CategorieFilm"
    Content="Catégorie : " 
    Grid.Row="10" 
    Grid.Column="1"
    Style="{StaticResource LabelNormauxDroite}"
/>
            <ScrollViewer
    Grid.Row="10"
    Grid.Column="2"
    VerticalScrollBarVisibility="Auto"
    HorizontalScrollBarVisibility="Disabled">
                <TextBlock 
        x:Name="CategorieFilmOutput"
        Text="Suspense, Horreur, Policier"
        TextWrapping="Wrap"
        Margin="5"
        HorizontalAlignment="Center"
        FontFamily="Footlight MT Light"
        FontSize="20"
        Foreground="#219EBC"/>
            </ScrollViewer>
            <TextBox 
            x:Name="InputCategorie"
            Grid.Row="10"
            Grid.Column="3"
            Style="{StaticResource TextBox}"
            />
            <Label 
    x:Name="LangueFilm"
    Content="Langue : " 
    Grid.Row="11" 
    Grid.Column="1"
    Style="{StaticResource LabelNormauxDroite}"
/>
            <Label 
    x:Name="LangueFilmOutput"
    Content="Français" 
    Grid.Row="11" 
    Grid.Column="2"
    Style="{StaticResource LabelNormauxGauche}"
    HorizontalAlignment="Center"
    
    />
            <TextBox 
        x:Name="InputLangue"
        Grid.Row="11"
        Grid.Column="3"
        Style="{StaticResource TextBox}"
        />
            <Label 
    x:Name="AfficheFilm"
    Content="Affiche : " 
    Grid.Row="13" 
    Grid.Column="1"
    Style="{StaticResource LabelNormauxDroite}"
/>
            <ScrollViewer
                Grid.Row="13"
                Grid.Column="2"
                VerticalScrollBarVisibility="Disabled"
                HorizontalScrollBarVisibility="Auto">
                <TextBlock 
                    x:Name="AfficheFilmOutput"
                    Text="LeSilenceDesAgneauxAffiche.png"
                    TextWrapping="Wrap"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontFamily="Footlight MT Light"
                    FontSize="20"
                    Foreground="#219EBC"/>
            </ScrollViewer>
            <TextBox 
    x:Name="AfficheFilmInput"
    Grid.Row="13"
    Grid.Column="3"
    Style="{StaticResource TextBox}"
    />
            <Label
         x:Name="Alerte"
         Content="**Message d'alerte**"
         Grid.Row="3"
         Grid.Column="4"
         Style="{StaticResource LabelAlerte}"/>

            <Button 
     x:Name="BtnAnnulerFilm" 
     Content="Annuler" 
     Grid.Row="15" 
     Grid.Column="4" 
     Style="{StaticResource BoutonBleu}" Click="BtnAnnulerFilm_Click"/>


            <Button 
                x:Name="BtnEnregristrerFilm" 
                Content="Enregistrer" 
                Grid.Row="15" 
                Grid.Column="3" 
                Style="{StaticResource BoutonJaune}" Click="BtnEnregristrerFilm_Click"/>
        </Grid>
    </ScrollViewer>
</Window>
