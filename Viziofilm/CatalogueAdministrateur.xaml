<Window x:Class="Viziofilm.CatalogueAdministrateur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Viziofilm"
        mc:Ignorable="d"
        Title="VizioFilmAdministrateur"
        Style="{StaticResource ProprieteFenetre}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>


        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <Button
                x:Name="BtnGererCatalogue" 
                Content="Gestion du catalogue" 
                Style="{StaticResource HeaderSelectionnee}"
             />

        <Button
                x:Name="BtnStatistiques" 
                Content="Voir les statistiques" 
                Grid.Column="2"
                Style="{StaticResource HeaderNeutre}" Click="BtnStatistiques_Click"
/>
        <Button
                x:Name="BtnGererAbonnement" 
                Content="Gestion des abonnements" 
                Grid.Column="1"
                Style="{StaticResource HeaderNeutre}" Click="BtnGererAbonnement_Click"
             />
        <Button
                x:Name="BtnDeconexion" 
                Content="🚪" 
                Grid.Column="3"
                Style="{StaticResource HeaderSelectionnee}"
                Foreground="#D16F00"
                Background="#FFD100" Click="BtnDeconexion_Click"
            />
        <TabControl Grid.ColumnSpan="4" Grid.Row="1">
            <TabItem Header="Gestion des films" Style="{StaticResource Onglet}">
                <Grid Background="#C6E9F7">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="26*"/>
                        <ColumnDefinition Width="371*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <ListView ItemsSource="{Binding Abonnement}" Background="#C6E9F7" Grid.ColumnSpan="2">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Titre" Width="380">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock 
                                            Text="{Binding Titre}" 
                                            Margin="5"
                                            FontSize="20"
                                            HorizontalAlignment="Stretch"
                                            />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Année" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock 
                                            Text="{Binding Annee}" 
                                            Margin="5"
                                            FontSize="20"
                                            HorizontalAlignment="Stretch"
                                            />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Disponible" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock 
                                            Text="{Binding Disponibilite}" 
                                            Margin="5"
                                            FontSize="20"
                                            HorizontalAlignment="Stretch"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="80" Header="Modifier">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button 
                                                Content="✏️" 
                                                Margin="5"
                                                FontSize="20"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="80" Header="Supprimer">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button 
                                                 Content="🗑️" 
                                                 Margin="5"
                                                 FontSize="20"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button 
                        Grid.Row="1"
                        Content="Ajouter"
                        Style="{StaticResource BoutonJaune}" Click="Button_Click" Grid.ColumnSpan="2" Margin="5,5,5,5"
                        />
                </Grid>
            </TabItem>
            <TabItem Header="Gestion des categories" Style="{StaticResource Onglet}" >
                <ListView ItemsSource="{Binding Abonnement}" Background="#C6E9F7">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Nom" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock 
                                    Text="{Binding Nom}" 
                                    Margin="5"
                                    FontSize="20"
                                    HorizontalAlignment="Stretch"
                                    />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Prix" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock 
                                    Text="{Binding Prix}" 
                                    Margin="5"
                                    FontSize="20"
                                    HorizontalAlignment="Stretch"
                                    />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Description" Width="300">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock 
                                    Text="{Binding Description}" 
                                    Margin="5"
                                    FontSize="20"
                                    HorizontalAlignment="Stretch"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="200" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button 
                                    Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListView}}, Path=DataContext.ChoisirAbonnement }" 
                                    CommandParameter="{Binding}" 
                                    Content="Souscrire" 
                                    Style="{StaticResource BoutonJaune}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
