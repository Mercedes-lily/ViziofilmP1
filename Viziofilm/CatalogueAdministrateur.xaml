<Window x:Class="Viziofilm.CatalogueAdministrateur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Viziofilm"
        mc:Ignorable="d"
        Title="VizioFilm"
        Style="{StaticResource ProprieteFenetre}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>


        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>

        </Grid.RowDefinitions>

        <Button
                x:Name="BtnGererCatalogue" 
                Content="Gestion du catalogue" 
                Style="{StaticResource HeaderSelectionnee}"
             />

        <Button
                x:Name="BtnStatistiques" 
                Content="Voir les statistiques" 
                Grid.Column="2"
                Style="{StaticResource HeaderNeutre}"
/>
        <Button
                x:Name="BtnGererAbonnement" 
                Content="Gestion des abonnements" 
                Grid.Column="1"
                Style="{StaticResource HeaderNeutre}"
             />
        <Button
                x:Name="BtnDeconexion" 
                Content="🚪" 
                Grid.Column="3"
                Style="{StaticResource HeaderSelectionnee}"
                Foreground="#D16F00"
                Background="#FFD100"
            />
        <ListView Grid.ColumnSpan="4" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nom" Width="390">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock 
                            Text="{Binding Nom}" 
                            Margin="5"
                            FontSize="20"
                        />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Prix" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock 
                            Text="{Binding Prix}" 
                            Margin="5"
                            FontSize="20"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Nombre d'appareil" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox 
                            Text="{Binding NBAppareil}" 
                            Margin="5"
                            FontSize="20"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="80" Header="Modifier">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button 
                                Content="✏️" 
                                Margin="5"
                                FontSize="20"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="80" Header="Supprimer">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button 
                                     Content="🗑️" 
                                     Margin="5"
                                     FontSize="20"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button
                x:Name="BtnAjouter" 
                Content="Ajouter" 
                Grid.Row="2"
                Grid.ColumnSpan="4"
                Style="{StaticResource BoutonJaune}"
             />
        </Grid>
</Window>
