<Window x:Class="Viziofilm.Inscription"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Viziofilm"
        mc:Ignorable="d"
        Title="VizioFilm" 
        Style="{StaticResource ProprieteFenetre}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <Label 
            x:Name="Titre" 
            Content="Inscription" 
            Grid.Row="0" 
            Grid.Column="0" 
            Style="{StaticResource LabelTitre}"
        />

            <Button 
            x:Name="BtnInscription" 
            Content="Soumettre" 
            Grid.Row="10" 
            Grid.Column="1" 
            Style="{StaticResource BoutonJaune}" Click="BtnInscription_Click"
            
        />

            <Button 
            x:Name="BtnRetour" 
            Content="Retour" 
            Grid.Row="11" 
            Grid.Column="2" 
            Style="{StaticResource BoutonBleu}" Click="BtnRetour_Click"
        />

            <Label 
            x:Name="Identifiant" 
            Content="Identifiant :" 
            Grid.Row="1" 
            Grid.Column="0" 
            Style="{StaticResource LabelNormauxDroite}"
        />

            <TextBox 
            x:Name="InputIdentifiant" 
            Grid.Row="1" 
            Grid.Column="1" 
            Style="{StaticResource TextBox}"
        />

            <Label 
            x:Name="MotdePasse" 
            Content="Mot de passe :" 
            Grid.Row="2" 
            Grid.Column="0" 
            Style="{StaticResource LabelNormauxDroite}"
        />

            <PasswordBox
            x:Name="InputMotDePasse" 
            Grid.Row="2" 
            Grid.Column="1" 
            Style="{StaticResource TextBox}"
    />

            <Label 
            x:Name="Nom" 
            Content="Nom :" 
            Grid.Row="3" 
            Grid.Column="0" 
            Style="{StaticResource LabelNormauxDroite}"
        />

            <TextBox 
            x:Name="InputNom" 
            Grid.Row="3" 
            Grid.Column="1" 
            Style="{StaticResource TextBox}"
        />
            <Label 
            x:Name="Prenom" 
            Content="Prenom :" 
            Grid.Row="4" 
            Grid.Column="0" 
            Style="{StaticResource LabelNormauxDroite}"
        />

            <TextBox 
            x:Name="InputPrenom" 
            Grid.Row="4" 
            Grid.Column="1" 
            Style="{StaticResource TextBox}"
        />

            <Label 
            x:Name="Adresse" 
            Content="Adresse :" 
            Grid.Row="5" 
            Grid.Column="0" 
            Style="{StaticResource LabelNormauxDroite}"
        />

            <TextBox 
            x:Name="InputAdresse" 
            Grid.Row="5" 
            Grid.Column="1" 
            Style="{StaticResource TextBox}"
        />

            <Label 
            x:Name="Ville" 
            Content="Ville :" 
            Grid.Row="6" 
            Grid.Column="0" 
            Style="{StaticResource LabelNormauxDroite}"
        />

            <TextBox 
            x:Name="InputVille" 
            Grid.Row="6" 
            Grid.Column="1" 
            Style="{StaticResource TextBox}"
        />

            <Label 
            x:Name="Pays" 
            Content="Pays :" 
            Grid.Row="7" 
            Grid.Column="0" 
            Style="{StaticResource LabelNormauxDroite}"
        />

            <ComboBox
            x:Name="ComboBoxPays" 
            Grid.Row="7" 
            Grid.Column="1" 
            Style="{StaticResource Liste}"
>
                <ComboBoxItem Content="Canada"/>
                <ComboBoxItem Content="États-Unis"/>
                <ComboBoxItem Content="France"/>
                <ComboBoxItem Content="Royaume-Uni"/>
                <ComboBoxItem Content="Allemagne"/>
            </ComboBox>


            <Label 
            x:Name="CodePostal" 
            Content="Code Postal :" 
            Grid.Row="8" 
            Grid.Column="0" 
            Style="{StaticResource LabelNormauxDroite}"
        />

            <TextBox 
            x:Name="InputCodePostal" 
            Grid.Row="8" 
            Grid.Column="1" 
            Style="{StaticResource TextBox}"
        />

            <Label 
            x:Name="Email" 
            Content="AdresseCourriel :" 
            Grid.Row="9" 
            Grid.Column="0" 
            Style="{StaticResource LabelNormauxDroite}"
        />

            <TextBox 
            x:Name="InputEmail" 
            Grid.Row="9" 
            Grid.Column="1" 
            Style="{StaticResource TextBox}"
        />

            <Label 
            x:Name="Erreur" 
            Content="**Message d'alerte**" 
            Grid.Row="1" 
            Grid.Column="2" 
            Style="{StaticResource LabelAlerte}"
        />

        </Grid>
    </ScrollViewer>
</Window>
