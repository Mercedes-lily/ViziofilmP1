<Window x:Class="Viziofilm.StatistiqueAdministrateur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Viziofilm"
        mc:Ignorable="d"
        Title="VizioFilmAdmin"
        Style="{StaticResource ProprieteFenetre}"

        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>


        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button
                x:Name="BtnGererCatalogue" 
                Content="Gestion du catalogue" 
                Style="{StaticResource HeaderNeutre}"
             />

        <Button
                x:Name="BtnStatistiques" 
                Content="Voir les statistiques" 
                Grid.Column="2"
                Style="{StaticResource HeaderSelectionnee}"
/>
        <Button
                x:Name="BtnGererAbonnement" 
                Content="Gestion des abonnements" 
                Grid.Column="1"
                Style="{StaticResource HeaderNeutre}"
             />
        <Button
                x:Name="BtnDeconexion" 
                Content="🚪" 
                Grid.Column="3"
                Style="{StaticResource HeaderSelectionnee}"
                Foreground="#D16F00"
                Background="#FFD100"
            />
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.ColumnSpan="4" Grid.Row="1">

            <Grid Grid.Row="1" Grid.ColumnSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>
                <Label 
                x:Name="StatistiqueTtre"
                Content="Les statistiques"
                Style="{StaticResource LabelTitre}"
                />
                <Label 
                x:Name="AlerteStatistique"
                Content="**Les montants mensuels affichés ici sont ceux entre le premier et le dernier jour du mois précedent celui en cours** "
                Grid.Row="1"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                Style="{StaticResource LabelAlerte}"
                />
                <Label 
                x:Name="TotalVisionnement"
                Content="Nombre de visionnement : "
                Grid.Row="2"
                Style="{StaticResource LabelNormauxDroite}"
                />
                <Label 
                x:Name="TotalVisionnementOutput"
                Content="23000"
                Grid.Column="1"
                Grid.Row="2"
                Style="{StaticResource LabelNormauxGauche}"
                />
                <Label 
                x:Name="Populaire10"
                Content="Films les plus populaires : "
                Grid.Row="3"
                VerticalAlignment="Top"
                Style="{StaticResource LabelNormauxDroite}"
                />
                <StackPanel 
                Grid.Row="3"
                Grid.Column="1"
                Orientation="Vertical"
                >
                    <Label 
                    x:Name="Populaire5Mensuel1Output"
                    Content="Oppenheimer (2023)"
                    Style="{StaticResource LabelNormauxGauche}"
                    />
                    <Label 
                    x:Name="Populaire5Mensuel2Output"
                    Content="Barbie (2023)"
                    Style="{StaticResource LabelNormauxGauche}"
                    />
                    <Label 
                    x:Name="Populaire5Mensuel3Output"
                    Content="Avatar : La voie de l'eau (2022)"
                    Style="{StaticResource LabelNormauxGauche}"
                    />
                    <Label 
                    x:Name="Populaire5Mensuel4Output"
                    Content="Les Indestructibles 2 (2018)"
                    Style="{StaticResource LabelNormauxGauche}"
                    />
                    <Label
                    x:Name="Populaire5Mensuel5Output"
                    Content="Black Panther : Wakanda Forever (2022)"
                    Style="{StaticResource LabelNormauxGauche}"
                    />
                </StackPanel>
                <Label 
                x:Name="TotalRevenuMensuel"
                Content="Revenu mensuel (Total) : "
                Grid.Row="4"
                Style="{StaticResource LabelNormauxDroite}"
                />
                <Label 
                x:Name="TotalRevenuMensuelOutput"
                Content="5500"
                Grid.Column="1"
                Grid.Row="4"
                Style="{StaticResource LabelNormauxGauche}"
                />
                <Label 
                x:Name="TotalRevenuMensuelAbonnement"
                Content="Revenu mensuel (Par abonnement) : "
                Grid.Row="5"
                VerticalAlignment="Top"
                Style="{StaticResource LabelNormauxDroite}"
                />
                <StackPanel 
 Grid.Row="5"
 Grid.Column="1"
 Orientation="Vertical"
 >
                    <Label 
     x:Name="Abonnement1Output"
     Content="Premium : 1227"
     Style="{StaticResource LabelNormauxGauche}"
     />
                    <Label 
     x:Name="Abonnement2Output"
     Content="Gold : 1531,70"
     Style="{StaticResource LabelNormauxGauche}"
     />
                    <Label 
     x:Name="Abonnement3Output"
     Content="Platine: 2354"
     Style="{StaticResource LabelNormauxGauche}"
     />
                    <Label 
     x:Name="Abonnement4Output"
     Content=""
     Style="{StaticResource LabelNormauxGauche}"
     />
                </StackPanel>
                <Label 
                x:Name="TotalUnitaireMensuel"
                Content="Revenu mensuel (Tarif Unitaire) : "
                Grid.Row="6"
                Style="{StaticResource LabelNormauxDroite}"
                />
                <Label 
                x:Name="TotalUnitaireMensuelOutput"
                Content="387,30"
                Grid.Row="6"
                Grid.Column="1"
                Style="{StaticResource LabelNormauxGauche}"
                />
                <Label 
                x:Name="TotalRenboursementMensuel"
                Content="Remboursement mensuel: "
                Grid.Row="7"
                Style="{StaticResource LabelNormauxDroite}"
                />
                <Label 
                x:Name="TotalRenboursementMensuelOutput"
                Content="20"
                Grid.Row="7"
                Grid.Column="1"
                Style="{StaticResource LabelNormauxGauche}"
                />

            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
